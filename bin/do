#!/bin/bash

DB_NAME="sonical"
PM="python manage.py"
PROJ="$(pwd)/api"
# @todo this should be an arg
SETTINGS="--settings=api.settings.dev"

# @todo throw an error when no arg is passed in

build() {
  echo
  echo "########### BUILD ###########"

  dropdb ${DB_NAME}
  createdb ${DB_NAME}

  if makemigrations; then
    if migrate; then
      if test; then
        if createsuperuser; then
          if seed; then
            echo
          fi
        fi
      fi
    fi
  fi

}

createsuperuser() {
  echo
  echo "########### CREATE SUPERUSER ###########"

  cd ${PROJ} && ${PM} createsuperuser ${SETTINGS}
}

makemigrations() {
  echo
  echo "########### MAKE MIGRATIONS ###########"

  cd ${PROJ} && ${PM} makemigrations ${SETTINGS}
}

migrate() {
  echo
  echo "########### MIGRATE ###########"

  cd ${PROJ} && ${PM} migrate ${SETTINGS}
}

run_server() {
  echo
  echo "########### RUN SERVER ###########"

  cd ${PROJ} && ${PM} runserver 127.0.0.1:8001 ${SETTINGS}
}

seed() {
  echo
  echo "########### SEED ###########"

  cd ${PROJ} && ${PM} seed ${SETTINGS}
}

sync_dealer_data() {
  echo
  echo "########### SYNC DEALER DATA ###########"

  cd ${PROJ} && ${PM} sync_dealer_data ${SETTINGS}
}

test() {
  echo
  echo "########### TEST ###########"

  cd ${PROJ} && ${PM} test ${SETTINGS}
}

source ${HOME}/.venv/sonical/bin/activate
${1}
echo "ALL DONE!"

exit 0
