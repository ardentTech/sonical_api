#!/bin/bash

DB_NAME="sonical"
PM="python manage.py"
PROJ="$(pwd)/api"
SETTINGS="--settings=api.settings.dev"

# @todo throw an error when no arg is passed in

build() {
  echo
  echo "########### BUILD ###########"

  dropdb ${DB_NAME}
  createdb ${DB_NAME}

  if makemigrations; then
    if migrate; then
      if test; then
        if createsuperuser; then
          if runserver; then
            echo
          fi
        fi
      fi
    fi
  fi

}

createsuperuser() {
  echo
  echo "########### CREATE SUPERUSER ###########"

  cd ${PROJ} && ${PM} createsuperuser ${SETTINGS}
}

makemigrations() {
  echo
  echo "########### MAKE MIGRATIONS ###########"

  cd ${PROJ} && ${PM} makemigrations ${SETTINGS}
}

migrate() {
  echo
  echo "########### MIGRATE ###########"

  cd ${PROJ} && ${PM} migrate ${SETTINGS}
}

runserver() {
  echo
  echo "########### RUN SERVER ###########"

  cd ${PROJ} && ${PM} runserver 127.0.0.1:8001 ${SETTINGS}
}

test() {
  echo
  echo "########### TEST ###########"

  cd ${PROJ} && ${PM} test ${SETTINGS}
}

source ${HOME}/.venv/sonical/bin/activate
${1}
echo "ALL DONE!"

exit 0
